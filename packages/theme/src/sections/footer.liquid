<footer class='outer'>
  <div class='container--l mxa'>
    {% assign footer_menu = section.settings.footer_menu %}

    {% if linklists[footer_menu].links.size > 0 %}
      <ul>
        {% for link in linklists[footer_menu].links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    {% endif %}

    <div>
      <small>{{ 'layout.footer.copyright' | t }} &copy; {{ 'now' | date: "%Y" }}, {{ shop.name | link_to: '/' }}</small>
    </div>
  </div>
</footer>

{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "link_list",
        "id": "footer_menu",
        "label": "First menu",
        "default": "footer"
      }
    ]
  }
{% endschema %}

{% comment %}
  Considerations for the header:
    1. Schema.org tags
      - <h1 itemscope itemtype='http://schema.org/Organization'>
      - itemprop [url, logo] etc
{% endcomment %}

<header role='banner' id='header' data-component='header'>
  <div class='outer'>
    <div class='container--l mxa'>
      <div class='f jcb aic'>
        <h1 itemscope itemtype='http://schema.org/Organization'>
          <a href='/'><em>Slater</em></a>
        </h1>

        <div class='f jcb fw'>
          <a class='mx05' href='/search'>Search</a>

          {% if shop.customer_accounts_enabled %}
            <a class='mx05' href='/account'>Account</a>
          {% endif %}

          <a href='/cart' class='ml1 js-cart-drawer-toggle'>
            Cart
            <span class='js-cart-count'>{{ cart.item_count }}</span>
          </a>
        </div>
      </div>

      <div class='pt1'>
        {% include 'navigation' %}
      </div>
    </div>
  </div>
</header>
